{% extends 'TrackmeBackendBundle::base_admin_assetic_less.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/admingeneratorgenerator/css/bootstrap/bootstrap.css') }}" type="text/css" media="all" />
{{parent()}}
{% endblock %}

{% block body %}
<div class="row-fluid">
	<div class="span8">
		{{ google_map_container(map) }}
		{{ google_map_js(map) }}
	</div>
	<div class="span4">
		<div class="accordion" id="accordion2">
			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
						Calcular viaje
					</a>
				</div>
				<div id="collapseOne" class="accordion-body collapse in">
					<div class="accordion-inner">
						<form method="post" {{ form_enctype(form) }}>
							{{ form_errors(form) }}
							{{ form_widget(form) }}
							{{ form_rest(form) }}
							<input type="submit" class="btn btn-success" value="Calcular" />
						</form>
					</div>
				</div>
			</div>
			<div class="accordion-group">
				<div class="accordion-heading">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
						Resultados
					</a>
				</div>
				<div id="collapseTwo" class="accordion-body collapse">
					<div class="accordion-inner">
						<ul>
							{% if(duration != 0) %}
							<li>Tiempo estimado: <b>{{duration}}</b></li>
							{% endif %}
							{% if(distance != null) %}
							<li>Distancia aproximada: <b>{{distance}}</b></li>
							{% endif %}
							{% if(estimate != null) %}
							<li>Costo estimado: $<b>{{estimate|number_format(1, '.', ',')}}</b></li>
							{% endif %}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block footer %}
<footer>
	<hr>
	<p>
		{% block footer_text %}
		&copy; {{"now"|date("Y")}} Track Me! Todos los derechos reservados
		{% endblock %}
	</p>
</footer>
{% endblock footer %}
